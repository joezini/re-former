<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username, "Enter your desired username:"%>
  <%= f.text_field :username %><br>
  <%= f.label :email %>
  <%= f.text_field :email, value: "example@email.com" %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit "Submit" %>
<% end %>
